@model TourOperator.Models.Entities.Customer

@{
    ViewData["Title"] = "Customer";
}

<div class="text-center">
    <h1 class="display-4">Customer</h1>
    
    <a asp-controller="Booking" asp-action="AllBookings" class="btn btn-secondary">Bookings</a>
    
    <form method="post" asp-controller="View" asp-action="Customer">
        @Html.HiddenFor(m => m.Username)

        <div>
            <label asp-for="FullName"></label><br/>
            <input asp-for="FullName"/>
            <span asp-validation-for="FullName" class="validation-error"></span>
        </div>

        <div>
            <label asp-for="Password"></label><br/>
            <input asp-for="Password" type="password" value=""/>
            <span asp-validation-for="Password" class="validation-error"></span>
        </div>

        <div>
            <label asp-for="PassportNo"></label><br/>
            <input asp-for="PassportNo"/>
            <span asp-validation-for="PassportNo" class="validation-error"></span>
        </div>

        <div>
            <label asp-for="PhoneNo"></label><br/>
            <input asp-for="PhoneNo"/>
            <span asp-validation-for="PhoneNo" class="validation-error"></span>
        </div>

        <button type="submit" class="w-100 btn btn-lg btn-primary">Update</button>
    </form>
</div>