@using TourOperator.Contexts
@using Microsoft.EntityFrameworkCore
@using TourOperator.Models.Entities

@model TourOperator.Models.Entities.Hotel

@{
    ViewData["Title"] = "Hotels";
}

<div class="text-center">
    <h1 class="display-4">@Model.Name</h1>
    
    @foreach (Room room in Model.Rooms)
    {
        <div class="room-item">
            <p>@room.Name</p>
            <p>£@room.Price</p>
            
            @using (Html.BeginForm("AddRoom", "Auth", FormMethod.Post))
            {
                <input type="hidden" name="referrer" value="/Hotel/@Model.Id"/>
                <input type="hidden" name="roomId" value="@room.Id"/>
                <input type="submit" value="Add To Basket"/>
            }
        </div>
    }
</div>